<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mydesign"
    tools:context="com.example.sa005gu.swaggersdksamples.ValidtadActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pb_logo_white"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/ImgView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/emp1View"
        android:orientation="horizontal"
        android:layout_below="@+id/ImgView"
        android:weightSum="1">
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/View1"
        android:orientation="horizontal"
        android:layout_below="@+id/emp1View"
        android:weightSum="1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No of Successful Validation :"
        android:textColor="#ffffff"
        android:id="@+id/Addresses"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textColor="#ffffff"
            android:id="@+id/AddressesValue"


 />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/emp2View"
        android:orientation="horizontal"
        android:layout_below="@+id/empView"
        android:weightSum="1">
    </LinearLayout>




</RelativeLayout>
