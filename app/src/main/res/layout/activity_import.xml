<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_import"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mydesign"
    tools:context="com.example.sa005gu.swaggersdksamples.ImportActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pb_logo_white"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/ImgView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"

        android:layout_below="@+id/ImgView"

        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="1">
        </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="1">
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Import your Addresses from csv"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:id="@+id/Import_Address"
        android:layout_below="@+id/ImgView"

        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="1">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Import_Address"

        android:orientation="horizontal"
        android:weightSum="1">

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"
             />

        <Button
            android:id="@+id/buttonImport"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.23"
            android:textColor="#ffffff"
            android:background="@drawable/round"

            android:text=" Import "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="visible" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

    </LinearLayout>
    >
</LinearLayout>

</android.support.design.widget.CoordinatorLayout>