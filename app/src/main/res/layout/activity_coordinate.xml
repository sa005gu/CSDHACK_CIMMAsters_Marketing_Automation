<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sa005gu.swaggersdksamples.CoordinateActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/mydesign"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pb_logo_white"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:id="@+id/ImgView"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/emp1View"
            android:orientation="horizontal"
            android:layout_below="@+id/ImgView"
            android:weightSum="1">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Device IDs of Visitors :"
            android:textColor="#ffffff"
            android:id="@+id/Addresses"
            android:layout_below="@+id/emp1View"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/llNonllNon"
            android:orientation="horizontal"
            android:layout_below="@+id/ImgView"
            android:weightSum="1">
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emp3View"
            android:orientation="vertical"
            android:layout_below="@+id/emp1View"
            android:weightSum="1">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dataview"
                android:orientation="vertical"
                android:layout_below="@+id/ImgView"
                android:weightSum="1">
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/emp4View"
                android:orientation="horizontal"
                android:layout_below="@+id/dataView"
                android:weightSum="1">
            </LinearLayout>


            <Button
                android:id="@+id/buttonValidate1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.23"
                android:textColor="#ffffff"
                android:layout_below="@+id/emp4View"
                android:background="@drawable/round"
                android:text="  Get Demographics "
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />


        </LinearLayout>



    </LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
