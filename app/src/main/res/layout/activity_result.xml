<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mydesign"
    tools:context="com.example.sa005gu.swaggersdksamples.ResultActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pb_logo_white"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/ImgView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Validated Address :"
            android:textColor="#ffffff"
            android:id="@+id/Validated_Address"
            android:layout_below="@+id/ImgView"
            android:layout_alignParentStart="true"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textColor="#ffffff"
            android:id="@+id/Validated_Address_Value"
            android:layout_below="@+id/ImgView"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/Linear"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Demographic Data of this Address "
            android:textColor="#ffffff"
            android:id="@+id/heading"
            android:layout_below="@+id/ImgView"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear1"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Adult Population :"
            android:textColor="#ffffff"
            android:id="@+id/Adult_Population"
            android:layout_below="@+id/ImgView"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/textPopulation_adult_count"
            android:layout_toRightOf="@+id/textAddressLine1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear2"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Person (25-29 yrs) :"
            android:textColor="#ffffff"
            android:id="@+id/Population_adult_count"
            android:layout_below="@+id/ImgView"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/textPopulation_range"
            android:layout_toRightOf="@+id/textAddressLine1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear3"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Female population :"
            android:textColor="#ffffff"
            android:id="@+id/Female_population_count"
            android:layout_below="@+id/ImgView"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/textFemale_population_count"
            android:layout_toRightOf="@+id/textAddressLine1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear4"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Male population :"
            android:textColor="#ffffff"
            android:id="@+id/Male_population_count"
            android:layout_below="@+id/ImgView"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/textMale_population_count"
            android:layout_toRightOf="@+id/textAddressLine1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear5"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Avg Income $:"
            android:textColor="#ffffff"
            android:id="@+id/Household_Average_Income"
            android:layout_below="@+id/ImgView"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/textHousehold_Average_Income"
            android:layout_toRightOf="@+id/textAddressLine1" />

    </LinearLayout>


</LinearLayout>
</android.support.design.widget.CoordinatorLayout>